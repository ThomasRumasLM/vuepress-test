{
    "files": "./src/main/resources/**/*.*",
    "ignore": [
        "./**/*.png",
        "./**/*.jpg",
        "./**/*.gif",
        "./**/*.eot",
        "./**/*.woff",
        "./**/macros/common/**/*.ftl",
        "./**/icon-kit/*.*"
    ],
    "transform": [

        { 
            "type" : "regex",
            "oldSyntax" : "map-get\\(\\s?\\$breakpoints([\\s,]*)([a-zA-Z]*)\\s?\\)([\\s\\*]*)1px",
            "newSyntax" : "$screen-$2"
        },
        {
            "type" : "regex", 
            "oldSyntax" : "@media ([\\$ #{]*)from-([a-z]*)([{} ]*)",
            "newSyntax" : "@include set-from-screen('$2') {"
        },
        {
            "type" : "warning",
            "oldSyntax" : "$breakpoints",
            "message" : "Loop on breakpoints map is no longer available, we advice you to change manually that using the @include modify-from-screen() mixin. See more details in Mozaic documentation"
        }
    ]
} 
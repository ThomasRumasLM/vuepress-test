{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "jest": true
    },
    "parser": "babel-eslint",
    "ignorePatterns": ["polyfill", "__tests__"],
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "impliedStrict": true
        }
    },
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "warn",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "warn",
            "always"
        ],
        "eqeqeq": [
            "error",
            "always"
        ],
        "no-var": "error",
        "no-empty-function": "error",
        "prefer-template": "warn",
        "no-this-before-super": "error",
        "no-unused-vars": [
            "error",
            {
                "varsIgnorePattern": "tc_"
            }
        ],
        "no-console": [
            "error", {
                "allow": [
                    "warn",
                    "error"
                ]
            }
        ],
        "no-alert": [
            "error"
        ],
        "prefer-const": ["error", {
            "destructuring": "all",
            "ignoreReadBeforeAssign": false
        }],
        "prefer-destructuring": ["warn", {
            "array": false,
            "object": true
          }, {
            "enforceForRenamedProperties": false
          }]
    },
    "overrides": [
        {
            "files": ["hooks/*.js", "hooks/*/*.js"],
            "rules": {
                "no-console": "off"
            }
        }
    ],
    "globals": {
        "jQuery": true,
        "webshim":true,
        "lm": true
    }
}
